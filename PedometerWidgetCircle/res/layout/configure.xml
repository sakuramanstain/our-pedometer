<TableLayout android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Maximum number of steps:"
                android:layout_weight="2"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:text="10000"
                android:id="@+id/maxLabel" />
    </LinearLayout>
    <SeekBar
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:progress="10000"
            android:max="10000"
            android:id="@+id/maxStepsBar" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="fill_parent" android:id="@+id/colors"
                  android:layout_marginTop="50px">
        <Button android:text="Text color" android:id="@+id/textColor"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:layout_weight="2"></Button>
        <Button android:text="Progress color" android:id="@+id/circleColor"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:layout_weight="2"></Button>
    </LinearLayout>
</TableLayout>
